---
import Layout from '~/layouts/PageLayout.astro';
import FAQs from '~/components/widgets/FAQs.astro';

const metadata = {
  title: 'Contact Us ‚Äî Partner With Ace-Scholara',
  description: 'Get in touch with Ace-Scholara. Partner with us as an institution or get guidance for your child\'s education.',
};
---

<Layout metadata={metadata}>
  <style>
    .form-input {
      width: 100%;
      padding: 0.75rem 1rem;
      border: 2px solid #e5e7eb;
      border-radius: 0.75rem;
      font-size: 1rem;
      transition: border-color 0.2s ease, box-shadow 0.2s ease;
    }
    
    .form-input:focus {
      outline: none;
      border-color: #3b82f6;
      box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
    }
    
    .dark .form-input {
      background-color: #1e293b;
      border-color: #334155;
      color: #f1f5f9;
    }
    
    .dark .form-input:focus {
      border-color: #60a5fa;
    }
    
    .tab-btn {
      padding: 1rem 2rem;
      font-weight: 600;
      border-radius: 0.75rem 0.75rem 0 0;
      transition: all 0.2s ease;
    }
    
    .tab-btn.active {
      background-color: white;
      color: #1e40af;
    }
    
    .tab-btn:not(.active) {
      background-color: #e0e7ff;
      color: #6b7280;
    }
    
    .dark .tab-btn.active {
      background-color: #1e293b;
      color: #60a5fa;
    }
    
    .dark .tab-btn:not(.active) {
      background-color: #334155;
      color: #9ca3af;
    }
  </style>

  <!-- Header Section -->
  <section class="bg-gradient-to-b from-slate-900 to-slate-800 text-white py-16">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">
        Let's Talk
      </h1>
      <p class="text-xl text-gray-300">
        Whether you're an institution or a parent, we're here to help.
      </p>
    </div>
  </section>

  <!-- Contact Form Section -->
  <section class="py-16 -mt-8">
    <div class="max-w-4xl mx-auto px-4 sm:px-6">
      <!-- Tab Buttons -->
      <div class="flex justify-center mb-0">
        <button 
          id="tab-institution" 
          class="tab-btn active"
          onclick="showForm('institution')"
        >
          üè´ I'm an Institution
        </button>
        <button 
          id="tab-parent" 
          class="tab-btn"
          onclick="showForm('parent')"
        >
          üë®‚Äçüë©‚Äçüëß I'm a Parent
        </button>
      </div>

      <!-- Institution Form -->
      <div id="form-institution" class="bg-white dark:bg-slate-800 rounded-b-2xl rounded-tr-2xl shadow-xl p-8">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">
          Partner With Us
        </h2>
        <p class="text-gray-600 dark:text-gray-400 mb-8">
          Fill seats without marketing risk. We'll get back to you within 24 hours.
        </p>

        <form action="https://formsubmit.co/partners@ace-scholara.com" method="POST" class="space-y-6">
          <!-- Honeypot -->
          <input type="text" name="_honey" style="display:none">
          <!-- Disable Captcha -->
          <input type="hidden" name="_captcha" value="false">
          <!-- Success redirect -->
          <input type="hidden" name="_next" value="https://ace-scholara.com/thank-you">
          <!-- Form type -->
          <input type="hidden" name="form_type" value="institution">

          <div class="grid md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                Institution Name *
              </label>
              <input type="text" name="institution_name" required class="form-input" placeholder="e.g., Presidency School">
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                Institution Type *
              </label>
              <select name="institution_type" required class="form-input">
                <option value="">Select type...</option>
                <option value="school_k12">School (K-12)</option>
                <option value="school_international">International School</option>
                <option value="college_engineering">Engineering College</option>
                <option value="college_management">Management College</option>
                <option value="college_other">Other College</option>
              </select>
            </div>
          </div>

          <div class="grid md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                Your Name *
              </label>
              <input type="text" name="contact_name" required class="form-input" placeholder="Your full name">
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                Your Role *
              </label>
              <input type="text" name="contact_role" required class="form-input" placeholder="e.g., Director, Principal, Admissions Head">
            </div>
          </div>

          <div class="grid md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                Email *
              </label>
              <input type="email" name="email" required class="form-input" placeholder="official@institution.edu">
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                Phone *
              </label>
              <input type="tel" name="phone" required class="form-input" placeholder="+91 98765 43210">
            </div>
          </div>

          <div class="grid md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                City *
              </label>
              <input type="text" name="city" required class="form-input" placeholder="e.g., Bangalore">
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                Approximate Seats to Fill
              </label>
              <select name="seats_target" class="form-input">
                <option value="">Select range...</option>
                <option value="1-10">1-10 seats</option>
                <option value="11-25">11-25 seats</option>
                <option value="26-50">26-50 seats</option>
                <option value="51-100">51-100 seats</option>
                <option value="100+">100+ seats</option>
              </select>
            </div>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
              Tell us more (optional)
            </label>
            <textarea name="message" rows="4" class="form-input" placeholder="Any specific requirements, current challenges, or questions..."></textarea>
          </div>

          <button type="submit" class="w-full px-8 py-4 bg-blue-600 hover:bg-blue-700 text-white rounded-xl font-semibold transition-colors">
            Request Partnership Discussion
          </button>
        </form>
      </div>

      <!-- Parent Form -->
      <div id="form-parent" class="hidden bg-white dark:bg-slate-800 rounded-b-2xl rounded-tl-2xl shadow-xl p-8">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">
          Get Guidance
        </h2>
        <p class="text-gray-600 dark:text-gray-400 mb-8">
          Tell us about your child's education needs. We'll reach out to understand better.
        </p>

        <form action="https://formsubmit.co/families@ace-scholara.com" method="POST" class="space-y-6">
          <!-- Honeypot -->
          <input type="text" name="_honey" style="display:none">
          <!-- Disable Captcha -->
          <input type="hidden" name="_captcha" value="false">
          <!-- Success redirect -->
          <input type="hidden" name="_next" value="https://ace-scholara.com/thank-you">
          <!-- Form type -->
          <input type="hidden" name="form_type" value="parent">

          <div class="grid md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                Your Name *
              </label>
              <input type="text" name="parent_name" required class="form-input" placeholder="Your full name">
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                Child's Current Grade *
              </label>
              <select name="current_grade" required class="form-input">
                <option value="">Select grade...</option>
                <option value="pre-kg">Pre-KG / Nursery</option>
                <option value="kg">Kindergarten</option>
                <option value="1-5">Grade 1-5</option>
                <option value="6-8">Grade 6-8</option>
                <option value="9-10">Grade 9-10</option>
                <option value="11-12">Grade 11-12</option>
                <option value="college">Looking for College</option>
              </select>
            </div>
          </div>

          <div class="grid md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                Email *
              </label>
              <input type="email" name="email" required class="form-input" placeholder="your.email@example.com">
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                Phone *
              </label>
              <input type="tel" name="phone" required class="form-input" placeholder="+91 98765 43210">
            </div>
          </div>

          <div class="grid md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                City *
              </label>
              <input type="text" name="city" required class="form-input" placeholder="e.g., Bangalore">
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                Budget Range (Annual)
              </label>
              <select name="budget_range" class="form-input">
                <option value="">Select range...</option>
                <option value="below-2l">Below ‚Çπ2 Lakhs</option>
                <option value="2l-5l">‚Çπ2-5 Lakhs</option>
                <option value="5l-10l">‚Çπ5-10 Lakhs</option>
                <option value="above-10l">Above ‚Çπ10 Lakhs</option>
                <option value="flexible">Flexible</option>
              </select>
            </div>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
              What are you looking for? *
            </label>
            <div class="grid grid-cols-2 gap-3">
              <label class="flex items-center gap-2 cursor-pointer">
                <input type="checkbox" name="looking_for[]" value="school_admission" class="w-4 h-4 rounded border-gray-300">
                <span class="text-sm text-gray-700 dark:text-gray-300">School Admission</span>
              </label>
              <label class="flex items-center gap-2 cursor-pointer">
                <input type="checkbox" name="looking_for[]" value="college_admission" class="w-4 h-4 rounded border-gray-300">
                <span class="text-sm text-gray-700 dark:text-gray-300">College Admission</span>
              </label>
              <label class="flex items-center gap-2 cursor-pointer">
                <input type="checkbox" name="looking_for[]" value="career_guidance" class="w-4 h-4 rounded border-gray-300">
                <span class="text-sm text-gray-700 dark:text-gray-300">Career Guidance</span>
              </label>
              <label class="flex items-center gap-2 cursor-pointer">
                <input type="checkbox" name="looking_for[]" value="campus_visits" class="w-4 h-4 rounded border-gray-300">
                <span class="text-sm text-gray-700 dark:text-gray-300">Campus Visits</span>
              </label>
            </div>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
              Tell us more about your needs (optional)
            </label>
            <textarea name="message" rows="4" class="form-input" placeholder="What are your priorities? Any specific concerns or requirements?"></textarea>
          </div>

          <button type="submit" class="w-full px-8 py-4 bg-purple-600 hover:bg-purple-700 text-white rounded-xl font-semibold transition-colors">
            Get Free Guidance
          </button>
        </form>
      </div>
    </div>
  </section>

  <!-- Contact Info -->
  <section class="py-16 bg-gray-50 dark:bg-slate-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6">
      <div class="grid md:grid-cols-3 gap-8 text-center">
        <div>
          <div class="w-16 h-16 bg-blue-100 dark:bg-blue-900/30 rounded-2xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
          </div>
          <h3 class="font-bold text-gray-900 dark:text-white mb-2">Email Us</h3>
          <p class="text-gray-600 dark:text-gray-400">
            <a href="mailto:hello@ace-scholara.com" class="text-blue-600 hover:underline">hello@ace-scholara.com</a>
          </p>
          <p class="text-sm text-gray-500 dark:text-gray-500 mt-1">We respond within 24 hours</p>
        </div>

        <div>
          <div class="w-16 h-16 bg-purple-100 dark:bg-purple-900/30 rounded-2xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
          </div>
          <h3 class="font-bold text-gray-900 dark:text-white mb-2">Call Us</h3>
          <p class="text-gray-600 dark:text-gray-400">
            <a href="tel:+919876543210" class="text-purple-600 hover:underline">+91 98765 43210</a>
          </p>
          <p class="text-sm text-gray-500 dark:text-gray-500 mt-1">Mon-Sat, 9 AM - 7 PM</p>
        </div>

        <div>
          <div class="w-16 h-16 bg-green-100 dark:bg-green-900/30 rounded-2xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
          </div>
          <h3 class="font-bold text-gray-900 dark:text-white mb-2">Location</h3>
          <p class="text-gray-600 dark:text-gray-400">
            Bangalore, Karnataka
          </p>
          <p class="text-sm text-gray-500 dark:text-gray-500 mt-1">South India (expanding)</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Quick FAQs -->
  <FAQs
    title="Quick Questions"
    classes={{ container: 'max-w-4xl' }}
    items={[
      {
        title: 'How quickly will you respond?',
        description: 'We aim to respond to all inquiries within 24 hours on business days. For urgent matters, please call us directly.',
      },
      {
        title: 'Is the initial consultation free?',
        description: 'Yes, for both institutions and parents. We believe in understanding your needs before discussing any engagement.',
      },
      {
        title: 'Which cities do you operate in?',
        description: 'Currently, we focus on South India - primarily Bangalore, Chennai, Hyderabad, and Kochi. We\'re expanding to other cities soon.',
      },
    ]}
  />
</Layout>

<script>
  function showForm(type) {
    const instForm = document.getElementById('form-institution');
    const parentForm = document.getElementById('form-parent');
    const instTab = document.getElementById('tab-institution');
    const parentTab = document.getElementById('tab-parent');
    
    if (type === 'institution') {
      instForm.classList.remove('hidden');
      parentForm.classList.add('hidden');
      instTab.classList.add('active');
      parentTab.classList.remove('active');
    } else {
      instForm.classList.add('hidden');
      parentForm.classList.remove('hidden');
      instTab.classList.remove('active');
      parentTab.classList.add('active');
    }
  }
  
  // Make function global for onclick handlers
  window.showForm = showForm;
</script>